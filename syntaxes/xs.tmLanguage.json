{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "xs",
	"patterns": [
		{
			"include": "#literal"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#expression"
		},
		{
			"include": "#comment"
		}
	],
	"repository": {
		"literal": {
			"patterns": [
				{
					"include": "#boolean-literal"
				},
				{
					"include": "#numeric-literal"
				},
				{
					"include": "#string-literal"
				}
			]
		},
		"expression": {
			"patterns":[
				{
					"include": "#expression-operators"
				}
			]
		},
		"boolean-literal": {
			"patterns": [
				{
					"name": "constant.language.boolean.true.xs",
					"match": "(?<!\\.)\\bTrue\\b"
				},
				{
					"name": "constant.language.boolean.false.xs",
					"match": "(?<!\\.)\\bFalse\\b"
				}
			]
		},
		"numeric-literal": {
			"patterns": [
				{
					"name": "constant.numeric.hex.xs",
					"match": "\\b0(x|X)[0-9a-fA-F_]+(U|u|L|l|UL|Ul|uL|ul|LU|Lu|lU|lu)?\\b"
				},
				{
					"name": "constant.numeric.binary.xs",
					"match": "\\b0(b|B)[01_]+(U|u|L|l|UL|Ul|uL|ul|LU|Lu|lU|lu)?\\b"
				},
				{
					"name": "constant.numeric.decimal.xs",
					"match": "\\b([0-9_]+)?\\.[0-9_]+((e|E)[0-9]+)?(F|f|D|d|M|m)?\\b"
				},
				{
					"name": "constant.numeric.decimal.xs",
					"match": "\\b[0-9_]+(e|E)[0-9_]+(F|f|D|d|M|m)?\\b"
				},
				{
					"name": "constant.numeric.decimal.xs",
					"match": "\\b[0-9_]+(F|f|D|d|M|m)\\b"
				},
				{
					"name": "constant.numeric.decimal.xs",
					"match": "\\b[0-9_]+(U|u|L|l|UL|Ul|uL|ul|LU|Lu|lU|lu)?\\b"
				}
			]
		},
		"string-literal": {
			"patterns" :[
				{
					"name": "string.quoted.double.xs",
					"begin": "(\")",
					"end": "(\")",
					"patterns": [
						{
							"name": "constant.character.escape.xs",
							"match": "\\\\."
						}
					]
				},
				{
					"name": "string.quoted.single.xs",
					"begin": "(')",
					"end": "(')",
					"patterns": [
						{
							"name": "constant.character.escape.xs",
							"match": "\\\\."
						}
					]
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.xs",
					"match": "(:=|:|\\?|\\@|\\!|\\-\\>|\\~\\>|\\<\\-|\\<\\~|\\.\\.\\.|\\.\\.|\\.)"
				}
			]
		},
		"expression-operators": {
			"patterns": [
				{
					"name": "keyword.operator.assignment.compound.xs",
					"match": "(\\*=|/=|%=|\\+=|-=|\\*\\*=|//=|%%=)"
				},
				{
					"name": "keyword.operator.comparison.xs",
					"match": "(==|><)"
				},
				{
					"name": "keyword.operator.relational.xs",
					"match": "(<=|>=|<|>)"
				},
				{
					"name": "keyword.operator.logical.xs",
					"match": "(\\~|&|\\|)"
				},
				{
					"name": "keyword.operator.assignment.xs",
					"match": "(\\=|\\:\\=)"
				},
				{
					"name": "keyword.operator.arithmetic.xs",
					"match": "%|\\*|/|-|\\+"
				},
				{
					"name": "keyword.operator.null-coalescing.xs",
					"match": "\\?\\?"
				}
			]
		},
		"comment": {
			"patterns": [
				{
					"name": "comment.block.big.big.xs",
					"begin": "(\\#\\#\\#)",
					"end": "(\\#\\#\\#)",
					"patterns": [
						{
							"name": "constant.character.escape.xs",
							"match": "\\\\."
						}
					]
				},
				{
					"name": "comment.block.big.xs",
					"begin": "(\\#\\#)",
					"end": "(\\#\\#)",
					"patterns": [
						{
							"name": "constant.character.escape.xs",
							"match": "\\\\."
						}
					]
				},
				{
					"name": "comment.block.xs",
					"begin": "(\\#)",
					"end": "(\\#)",
					"patterns": [
						{
							"name": "constant.character.escape.xs",
							"match": "\\\\."
						}
					]
				}
			]
		}
	},
	"scopeName": "source.xs"
}